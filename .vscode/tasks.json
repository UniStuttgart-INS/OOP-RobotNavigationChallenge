{
    "version": "2.0.0",
    "tasks": [
        // ╔══════════════════════════════════════════════════════════════════════════════════════════╗
        // ║                                        CLEAN Tasks                                       ║
        // ╚══════════════════════════════════════════════════════════════════════════════════════════╝
        {
            "label": "Clean: Remove Build Files",
            "type": "shell",
            "group": "build",
            "linux": {
                "command": "rm",
                "args": [
                    "-rf",
                    "build",
                ],
            },
            "windows": {
                "command": "Remove-Item",
                "args": [
                    "-Recurse",
                    "build",
                ]
            },
            "presentation": {
                "reveal": "never",
                "echo": false,
                "showReuseMessage": false,
            },
            "problemMatcher": [],
        },
        // ╔══════════════════════════════════════════════════════════════════════════════════════════╗
        // ║                                       Conan Tasks                                        ║
        // ╚══════════════════════════════════════════════════════════════════════════════════════════╝
        {
            "label": "Debug: Conan",
            "type": "shell",
            "group": "build",
            "command": "conan",
            "args": [
                "install",
                ".",
                "--build=missing",
                "-s",
                "build_type=Debug",
            ],
            "presentation": {
                "clear": true,
            },
            "problemMatcher": [],
        },
        {
            "label": "Release: Conan",
            "type": "shell",
            "group": "build",
            "command": "conan",
            "args": [
                "install",
                ".",
                "--build=missing",
                "-s",
                "build_type=Release",
            ],
            "presentation": {
                "clear": true,
            },
            "problemMatcher": [],
        },
        // ╔══════════════════════════════════════════════════════════════════════════════════════════╗
        // ║                                        CMAKE Tasks                                       ║
        // ╚══════════════════════════════════════════════════════════════════════════════════════════╝
        {
            "label": "Release: Cmake",
            "type": "shell",
            "group": "build",
            "command": "cmake",
            "args": [
                "-Bbuild/Release",
                "-S.",
                "-DCMAKE_BUILD_TYPE=Release",
                "-DCMAKE_TOOLCHAIN_FILE=${workspaceFolder}/build/Release/generators/conan_toolchain.cmake",
            ],
            "linux": {
                "options": {
                    "env": {
                        "CC": "/usr/bin/clang",
                        "CXX": "/usr/bin/clang++",
                    },
                },
            },
            "windows": {
                "options": {
                    "env": {
                        "VSLANG": "1033",
                        "chcp": "1252",
                    }
                },
            },
            "presentation": {
                "clear": true,
            },
            "dependsOn": [
                "Release: Conan",
            ],
            "problemMatcher": [],
        },
        {
            "label": "Debug: Cmake",
            "type": "shell",
            "group": "build",
            "command": "cmake",
            "args": [
                "-Bbuild/Debug",
                "-S.",
                "-DCMAKE_BUILD_TYPE=Debug",
                "-DCMAKE_TOOLCHAIN_FILE=${workspaceFolder}/build/Debug/generators/conan_toolchain.cmake",
            ],
            "linux": {
                "options": {
                    "env": {
                        "CC": "/usr/bin/clang",
                        "CXX": "/usr/bin/clang++",
                    },
                },
            },
            "windows": {
                "options": {
                    "env": {
                        "VSLANG": "1033",
                        "chcp": "1252",
                    }
                },
            },
            "presentation": {
                "clear": true,
            },
            "dependsOn": [
                "Debug: Conan",
            ],
            "problemMatcher": [],
        },
        // ╔══════════════════════════════════════════════════════════════════════════════════════════╗
        // ║                                       Build Tasks                                        ║
        // ╚══════════════════════════════════════════════════════════════════════════════════════════╝
        {
            "label": "Release: Build",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "cmake",
            "args": [
                "--build",
                "build/Release",
                "--parallel8",
            ],
            "windows": {
                "options": {
                    "env": {
                        "VSLANG": "1033",
                        "chcp": "1252",
                    }
                },
            },
            "dependsOn": [
                "Release: Cmake",
            ],
            "problemMatcher": [],
        },
        {
            "label": "Debug: Build",
            "type": "shell",
            "group": {
                "kind": "build",
            },
            "command": "cmake",
            "args": [
                "--build",
                "build/Debug",
                "--parallel8",
            ],
            "windows": {
                "options": {
                    "env": {
                        "VSLANG": "1033",
                        "chcp": "1252",
                    }
                },
            },
            "dependsOn": [
                "Debug: Cmake",
            ],
            "problemMatcher": [],
        },
        // ╔══════════════════════════════════════════════════════════════════════════════════════════╗
        // ║                                        Run Tasks                                         ║
        // ╚══════════════════════════════════════════════════════════════════════════════════════════╝
        {
            "label": "Debug: Build & run",
            "type": "shell",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "command": "./build/bin/oop-robot-navigation-challenge",
            "args": [],
            "dependsOn": [
                "Debug: Build",
            ],
            "problemMatcher": [],
        },
        {
            "label": "Release: Build & run",
            "type": "shell",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "command": "./build/bin/oop-robot-navigation-challenge",
            "args": [],
            "dependsOn": [
                "Release: Build",
            ],
            "problemMatcher": [],
        },
    ]
}